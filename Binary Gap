class Solution {
    public int binaryGap(int n) {
        int maxDistance = 0;
        int lastPosition = -1;
        int currentPosition = 0;
        
        while (n > 0) {
            if ((n & 1) == 1) {  // if current bit is 1
                if (lastPosition != -1) {
                    maxDistance = Math.max(maxDistance, currentPosition - lastPosition);
                }
                lastPosition = currentPosition;
            }
            n >>= 1;   // right shift
            currentPosition++;
        }
        
        return maxDistance;
    }
}
