class Solution {
    public double separateSquares(int[][] squares) {
        double totalArea = 0.0;
        double low = Double.MAX_VALUE;
        double high = Double.MIN_VALUE;

        // Compute total area and search bounds
        for (int[] sq : squares) {
            double y = sq[1];
            double side = sq[2];
            totalArea += side * side;
            low = Math.min(low, y);
            high = Math.max(high, y + side);
        }

        double half = totalArea / 2.0;

        // Binary search
        for (int i = 0; i < 60; i++) { // sufficient precision
            double mid = (low + high) / 2.0;
            double areaBelow = 0.0;

            for (int[] sq : squares) {
                double y = sq[1];
                double side = sq[2];
                double top = y + side;

                if (mid <= y) {
                    continue;
                } else if (mid >= top) {
                    areaBelow += side * side;
                } else {
                    areaBelow += side * (mid - y);
                }
            }

            if (areaBelow < half) {
                low = mid;
            } else {
                high = mid;
            }
        }

        return low;
    }
}
